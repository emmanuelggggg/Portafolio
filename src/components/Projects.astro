---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import Php from "./icons/Php.astro"
import Boostrap from "./icons/Bootstrap.astro"
import Js from "./icons/JS.astro"
import React from "./icons/React.astro"
import Laravel from "./icons/Laravel.astro"
import Figma from "./icons/Figma.astro"
import Astro1 from "./icons/Astro1.astro"
import Nodejs from "./icons/Nodejs.astro"

const TAGS = {
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-violet-600 text-white",
    icon: Boostrap,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  PHP: {
    name: "PHP",
    class: "bg-indigo-700 text-white",
    icon: Php,
  },
  JS: {
    name: "JavaScript",
    class: "bg-yellow-600 text-white",
    icon: Js,
  },
  REACT: {
    name: "React js",
    class: "bg-blue-600 text-white",
    icon: React,
  },
  LARAVEL: {
    name: "Laravel",
    class: "bg-red-600 text-white",
    icon: Laravel,
  },
  ASTR1: {
    name: "Astro",
    class: "bg-orange-600 text-white",
    icon: Astro1,
  },
  FIGMA: {
    name: "Figma",
    class: "bg-white text-gray-700 border border-gray-800",
    icon: Figma,
  },
  NODE: {
    name: "Node-Express",
    class: "bg-white text-green-700 border border-green-800 ",
    icon: Nodejs,
  },
}
const PROJECTS = [
  {
    title: "SESEA",
    link: "https://seseabcs.gob.mx/sesea/",    
    image: '/projects/sesea1.png',
    tags: [ TAGS.BOOTSTRAP, TAGS.PHP, TAGS.JS ],
  },
  {
    title: "SEA",
    link: "https://www.seabcs.gob.mx/",
    image: "/projects/sea1.png",
    tags: [TAGS.BOOTSTRAP, TAGS.PHP, TAGS.JS],
  },
  {
    title: "EDITEST",
    link: "#",
    image: "/projects/edi1.png",
    tags: [TAGS.TAILWIND, TAGS.LARAVEL, TAGS.JS],
  },
  {
    title: "I.SABERES",
    link: "https://interconectandosaberes.netlify.app/",
    image: "/projects/it.png",
    tags: [TAGS.TAILWIND, TAGS.ASTR1, TAGS.JS,TAGS.FIGMA],
  },
  {
    title: "S.U.T.C.B.E.B.C.S",
    link: "#",
    image: "/projects/cb.png",
    tags: [TAGS.TAILWIND, TAGS.REACT, TAGS.FIGMA,TAGS.NODE],
  },
]
---

<div class="grid gap-4 grid-cols-2 w-full">
  {
    PROJECTS.map(({ image, title, tags, link }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0 m-5">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105 " loading="lazy" src={image} / >
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap m-2 ">
      <ul class="flex flex-row flex-wrap mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
      <footer class="flex items-end flex-wrap justify-start mt-4 gap-x-4">        
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



